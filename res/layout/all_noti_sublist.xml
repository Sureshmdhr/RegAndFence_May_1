<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@layout/list_notifications"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/noti_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:layout_toLeftOf="@+id/noti_delete"
        android:paddingLeft="5dp"
        android:text="Large Text"
        android:textColor="@color/whiteflat"
        android:textSize="15sp"
        android:textStyle="bold"
        android:typeface="serif" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/noti_title"
        android:layout_margin="10dp" >

        <TextView
            android:id="@+id/noti_message"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/whiteflat"
            android:textSize="15sp"
            android:textStyle="italic"
            android:typeface="serif" />

        <TextView
            android:id="@+id/noti_date"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_gravity="right|bottom"
            android:layout_marginBottom="5dp"
            android:layout_weight="3"
            android:gravity="right|bottom"
            android:paddingRight="5dp"
            android:text="Date:"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/whiteflat"
            android:textSize="10sp"
            android:textStyle="italic"
            android:typeface="serif" />

    </LinearLayout>

    <ImageButton
        android:id="@+id/noti_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:maxHeight="10dp"
        android:maxWidth="10dp"
        android:src="@drawable/close" />

</RelativeLayout>