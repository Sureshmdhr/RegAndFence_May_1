
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

<item android:state_checked="true" >
    <shape>
        <gradient
    android:type="radial" 
    android:gradientRadius="180"
    android:startColor="@color/green" 
    android:endColor="@color/greendark" />
    </shape>
</item>

<item android:state_checked="false" >
    <shape>
        <gradient
        android:type="radial" 
        android:gradientRadius="180"
        android:startColor="@color/redflat"
        android:endColor="@color/redflatdark" />
    </shape>
</item>
</selector>